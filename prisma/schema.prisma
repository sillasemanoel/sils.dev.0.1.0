generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("POSTGRES_PRISMA_URL")
  directUrl = env("POSTGRES_URL_NON_POOLING")
}

model User {
  id        String   @id @default("1")
  name      String
  surname   String
  email     String
  password  String
  favicon   String
  picture   String
  hero      Hero[]
  About     About[]
  Project   Project?
  updatedAt DateTime @updatedAt
  createdAt DateTime @default(now())
}

model Hero {
  id          String  @id @default("1")
  title       String
  description String
  userId      String
  user        User    @relation(fields: [userId], references: [id])
  links       Link[]
  stacks      Stack[]
}

model Link {
  id     Int    @id @default(autoincrement())
  name   String
  link   String
  heroId String
  hero   Hero   @relation(fields: [heroId], references: [id])
}

model Stack {
  id     Int    @id @default(autoincrement())
  name   String
  heroId String
  hero   Hero   @relation(fields: [heroId], references: [id])
}

model About {
  id          String @id @default("1")
  title       String
  description String
  picture     String
  userId      String
  user        User   @relation(fields: [userId], references: [id])
}

model Project {
  id               String            @id @default(uuid())
  title            String
  description      String
  userId           String            @unique
  user             User              @relation(fields: [userId], references: [id])
  projectCategorys ProjectCategory[]
}

model ProjectCategory {
  id          String        @id @default(uuid())
  name        String
  projectId   String        @unique
  project     Project       @relation(fields: [projectId], references: [id])
  projectUnit ProjectUnit[]
}

model ProjectUnit {
  id                String          @id @default(uuid())
  title             String
  description       String
  picture           String
  code              String
  liveDemo          String
  projectCategoryId String          @unique
  projectCategory   ProjectCategory @relation(fields: [projectCategoryId], references: [id])
  technologie       Technologie[]
}

model Technologie {
  id            String      @id @default(uuid())
  name          String
  picture       String
  projectUnitId String      @unique
  projectUnit   ProjectUnit @relation(fields: [projectUnitId], references: [id])
}
